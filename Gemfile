source 'https://rubygems.org'

# Web framework
gem 'sinatra'

# SSL enforcer
gem 'rack-ssl-enforcer'

# Templating language
gem 'slim'

# Markdown engine
gem 'kramdown'

# Configuration management
gem 'dotenv'

# Contentful Delivery SDK
gem 'contentful'

group :development do
  # Debugging
  gem 'pry'
  gem 'pry-remote'

  # Live-reload
  gem 'rack-livereload'
  gem 'rerun'
end
