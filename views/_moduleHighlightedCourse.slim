.module.module-highlighted-course
  .module-highlighted-course__wrapper(style="background-image: url(#{course.image.file.url});")
    .module-highlighted-course__overlay
    .module-highlighted-course__content
      - if course.categories
        .module-highlighted-course__categories
          - course.categories.each do |category|
            a.module-highlighted-course__category(href="/courses/categories/#{category.slug}#{query_string}") #{category.title}
      h2.module-highlighted-course__title
        a(href="/courses/#{course.slug}#{query_string}")= course.title
      .module-highlighted-course__description-wrapper
        p
          == Kramdown::Document.new(course.short_description).to_html
      .module-highlighted-course__link-wrapper
        a.module-highlighted-course__link(href="/courses/#{course.slug}#{query_string}") #{I18n.translate('viewCourseLabel', current_locale.code)}
